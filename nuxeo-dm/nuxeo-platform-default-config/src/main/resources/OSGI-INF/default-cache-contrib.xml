<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.default.caches">

  <extension target="org.nuxeo.ecm.core.cache.CacheService"
             point="caches">

    <cache name="cache-vocabulary" class="org.nuxeo.ecm.core.cache.InMemoryCacheImpl">
      <ttl>60</ttl><!-- minutes -->
      <option name="maxSize">1000</option>
      <option name="concurrencyLevel">10</option>
    </cache>

    <cache name="cache-xvocabulary" class="org.nuxeo.ecm.core.cache.InMemoryCacheImpl">
      <ttl>60</ttl><!-- minutes -->
      <option name="maxSize">1000</option>
      <option name="concurrencyLevel">10</option>
    </cache>

    <cache name="cache-l10nxvocabulary" class="org.nuxeo.ecm.core.cache.InMemoryCacheImpl">
      <ttl>60</ttl><!-- minutes -->
      <option name="maxSize">1000</option>
      <option name="concurrencyLevel">10</option>
    </cache>

    <cache name="cache-documentsLists" class="org.nuxeo.ecm.core.cache.InMemoryCacheImpl">
      <ttl>60</ttl><!-- minutes -->
      <option name="maxSize">1000</option>
      <option name="concurrencyLevel">10</option>
    </cache>

  </extension>

</component>